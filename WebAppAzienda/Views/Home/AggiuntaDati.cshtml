<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Aggiungi Dati Utente</h2>
                </div>
                <div class="card-body">
                    <form method="post" action="/Home">
                        <div class="mb-3">
                            <label for="Nome" class="form-label">Nome:</label>
                            <input type="text" id="Nome" name="Nome" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="Cognome" class="form-label">Cognome:</label>
                            <input type="text" id="Cognome" name="Cognome" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="NTelefonico" class="form-label">Numero Telefonico:</label>
                            <input type="text" id="NTelefonico" name="NTelefonico" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email:</label>
                            <input type="email" id="Email" name="Email" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Aggiungi Dati Utente</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
